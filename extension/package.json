{
  "name": "full-stack-template-extension",
  "displayName": "Web Extension Template",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "Mike Odnis <mikeodnis3242004@gmail.com>",
  "license": "EPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/WomB0ComB0/full-stack-template/extension"
  },
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build --source-maps --bundle-buddy",
    "package": "plasmo package",
    "lint": "bunx biome check --write ./ || true",
    "lint:knip": "knip",
    "lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --rules sentences-per-line",
    "lint:packages": "pnpm dedupe --check",
    "lint:spelling": "cspell \"**\" \".github/**/*\"",
    "prepare": "husky",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@biomejs/biome": "1.8.3",
    "@nextui-org/link": "^2.0.34",
    "@nextui-org/system": "^2.2.5",
    "@nextui-org/theme": "^2.2.9",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.5.4",
    "lucide-react": "^0.439.0",
    "plasmo": "0.89.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "3.4.10",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.2.4",
    "vitest": "^2.0.5"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "1.9.0",
    "@ianvs/prettier-plugin-sort-imports": "4.3.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-onboarding": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@types/chrome": "0.0.270",
    "@types/node": "22.5.4",
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0",
    "@vitest/coverage-v8": "^2.0.5",
    "console-fail-test": "^0.5.0",
    "cspell": "^8.14.2",
    "husky": "^9.1.5",
    "knip": "^5.30.0",
    "lint-staged": "^15.2.10",
    "markdownlint": "^0.35.0",
    "markdownlint-cli": "^0.41.0",
    "patch-package": "^8.0.0",
    "postcss": "8.4.45",
    "prettier": "3.3.3",
    "prettier-plugin-curly": "^0.2.2",
    "prettier-plugin-packagejson": "^2.5.2",
    "prettier-plugin-sh": "^0.14.0",
    "release-it": "^17.6.0",
    "sentences-per-line": "^0.2.1",
    "storybook": "^8.2.9",
    "typescript": "5.5.4"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "publishConfig": {
    "provenance": true
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  }
}
